<%= form_for(@user) do |f| %>
  <%= f.text_field :name, class: "text", placeholder: t("form.full_name") %>
  <%= show_message_for_field :name %>
  <%= f.email_field :email, class: "text", placeholder: t("form.email") %>
  <%= show_message_for_field :email %>
  <%= f.password_field :password, class: "password", placeholder: t("form.password") %>
  <%= show_message_for_field :password %>
  <%= f.password_field :password_confirmation, class: "password", placeholder: t("form.password_confirmation") %>
  <%= show_message_for_field :password_confirmation %>
  <%= f.submit t("sign_up.sign_up").upcase, class: "btn btn-primary" %>
<% end %>
